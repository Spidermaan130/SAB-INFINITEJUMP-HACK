repeat task.wait() until game:IsLoaded()
local player = game:GetService("Players").LocalPlayer
local UIS = game:GetService("UserInputService")
local TS = game:GetService("TweenService")

-- Protection: Remove old versions to prevent overlap
local old = player:WaitForChild("PlayerGui"):FindFirstChild("GhaloulixHub")
if old then old:Destroy() end

-- Main ScreenGui
local SG = Instance.new("ScreenGui", player.PlayerGui)
SG.Name = "GhaloulixHub"
SG.ResetOnSpawn = false

-- [[ 1. THE NOTIFICATION SYSTEM ]] --
local function notify(text)
    local nFrame = Instance.new("Frame", SG)
    nFrame.Size = UDim2.new(0, 250, 0, 50)
    nFrame.Position = UDim2.new(0.5, -125, -0.1, 0)
    nFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
    Instance.new("UICorner", nFrame)
    local nLab = Instance.new("TextLabel", nFrame)
    nLab.Size = UDim2.new(1, 0, 1, 0)
    nLab.Text = text; nLab.TextColor3 = Color3.new(1,1,1); nLab.BackgroundTransparency = 1; nLab.Font = Enum.Font.GothamBold
    
    TS:Create(nFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back), {Position = UDim2.new(0.5, -125, 0.05, 0)}):Play()
    task.delay(3, function()
        TS:Create(nFrame, TweenInfo.new(0.5), {Position = UDim2.new(0.5, -125, -0.2, 0)}):Play()
        task.wait(0.5)
        nFrame:Destroy()
    end)
end

