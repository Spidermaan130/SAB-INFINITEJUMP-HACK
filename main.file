-- [[ üõ°Ô∏è SECTION 1: THE UNIVERSAL BAC SHIELD üõ°Ô∏è ]] --
local mt = getrawmetatable(game)
local oldNamecall = mt.__namecall
setreadonly(mt, false)

mt.__namecall = newcclosure(function(self, ...)
    local method = getnamecallmethod()
    
    -- 1. Block Teleports & Kicks
    if (self == TeleportService and method:find("Teleport")) or method == "Kick" or method == "kick" or (method == "Destroy" and self == p) then 
        return nil 
    end
    
    -- 2. Block Anti-Cheat Reports
    if method == "FireServer" and tostring(self):lower():find("bac") then
        if tostring(self):find("Heartbeat") then 
            return oldNamecall(self, ...) 
        end
        return nil 
    end
    return oldNamecall(self, ...)
end)
setreadonly(mt, true)

