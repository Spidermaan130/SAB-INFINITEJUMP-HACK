-- This logic keeps your speed constant and allows unlimited jumps
RunService.Heartbeat:Connect(function()
    local char = localPlayer.Character
    local hrp = char and char:FindFirstChild("HumanoidRootPart")
    local hum = char and char:FindFirstChildOfClass("Humanoid")
    
    if active and hrp and hum then
        -- Anti-Kick: Prevents air-time detection codes like 1358
        hum:ChangeState(Enum.HumanoidStateType.Running)
        
        -- Momentum Lock: Prevents being slowed down by anti-cheat friction
        if hum.MoveDirection.Magnitude > 0 then
            local speed = hum.WalkSpeed
            local dir = hum.MoveDirection
            hrp.Velocity = Vector3.new(dir.X * speed, hrp.Velocity.Y, dir.Z * speed)
        end
    end
end)

